{
	"include": ["../lib/index.ts"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"allowUnreachableCode": false,
		"noUncheckedIndexedAccess": true,
		"declaration": true,
		"isolatedModules": true,
		"sourceMap": true
	},
}
